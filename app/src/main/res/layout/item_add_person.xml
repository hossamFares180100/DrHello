<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lay_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        >

        <RelativeLayout
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/rel_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_2sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_cur_user"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/user"
                app:civ_border_color="@color/appColor"
                app:civ_border_width="0.6dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/appColor"
            android:layout_gravity="center"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_add"
        android:layout_width="115dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_21sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/shape_add_friend"
        android:drawableLeft="@drawable/ic_add_person"
        android:paddingLeft="@dimen/_5sdp"
        android:text="@string/add_friend"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_cancel"
        android:layout_width="115dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_21sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:drawableLeft="@drawable/ic_add_disabled"
        android:paddingLeft="@dimen/_5sdp"
        android:background="@drawable/shape_add_friend"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />




</RelativeLayout>