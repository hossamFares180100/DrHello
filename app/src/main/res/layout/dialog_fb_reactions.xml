<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp"
        android:background="@color/white"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ic_like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/like_anim"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ic_love"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/love_anim"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ic_haha"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/haha_anim"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ic_sad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/sad_anim"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ic_wow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/wow_anim"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ic_angry"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/angry_anim"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
    
</RelativeLayout>