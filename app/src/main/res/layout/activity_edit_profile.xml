                            <EditText
                                android:id="@+id/edit_spec_in_dr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_rename"
                                android:drawablePadding="8dp"
                                android:hint="Oral surgery department"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/profile_color" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_specialist"
                                android:layout_gravity="center"
                                android:paddingLeft="3dp"
                                tools:ignore="ContentDescription" />

                        </androidx.cardview.widget.CardView>

                        <EditText
                            android:id="@+id/edit_spec_dr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_rename"
                            android:drawablePadding="10dp"
                            android:hint="Dentist"
                            android:layout_marginRight="5dp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/profile_color" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.core.widget.NestedScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>

