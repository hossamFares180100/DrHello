                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_rename"
                                android:hint="March 19, 2000"
                                android:layout_marginRight="5dp"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/profile_color" />
                        </LinearLayout>


                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:text="Workplace"
                        android:textColor="@color/appColor"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:drawableLeft="@drawable/workplace"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_baseline_local_hospital"
                                android:layout_gravity="center"
                                android:paddingLeft="2dp"
                                tools:ignore="ContentDescription" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            tools:ignore="NestedWeights"
                            >

                            <EditText
                                android:id="@+id/edit_work_place_dr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:hint="Life hospital, al khusus"
                                android:textColor="@color/profile_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:src="@drawable/location_dr"
                                android:gravity="right|center"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/specialist"
                                android:layout_gravity="center"
                                android:paddingLeft="2dp"
                                tools:ignore="ContentDescription" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
